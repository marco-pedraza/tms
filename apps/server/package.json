{
  "name": "ims-server",
  "private": true,
  "version": "0.0.1",
  "description": "Encore + Drizzle Typescript Example",
  "license": "MPL-2.0",
  "type": "module",
  "scripts": {
    "preinstall": "cd ../../packages/base-repo && npm run build && cd ../../packages/state-machine && npm run build",
    "dev": "encore run",
    "test": "vitest run",
    "test:coverage": "encore test --coverage",
    "prebuild": "npm install --install-links",
    "test:encore": "encore test",
    "lint": "eslint",
    "format": "prettier --write .",
    "format:check": "prettier . --check",
    "db:generate": "drizzle-kit generate",
    "encore:gen-client": "encore gen client --lang typescript --output ../../packages/ims-client/index.ts",
    "encore:check": "encore check",
    "seed:permissions": "encore exec -- npx tsx db/scripts/seed-permissions.ts --seed",
    "seed:inventory": "encore exec -- npx tsx db/scripts/seed-inventory.ts --seed",
    "seed:inventory:gfa": "encore exec -- npx tsx db/scripts/seed-inventory.ts --seed --client gfa",
    "seed:planning": "encore exec -- npx tsx db/scripts/seed-planning.ts --seed",
    "seed:planning:gfa": "encore exec -- npx tsx db/scripts/seed-planning.ts --seed --client gfa",
    "seed:users": "encore exec -- npx tsx db/scripts/seed-users.ts --seed",
    "seed:users:gfa": "encore exec -- npx tsx db/scripts/seed-users.ts --seed --client gfa",
    "generate-postman-collection": "tsx tools/postman-generator/src/index.ts"
  },
  "devDependencies": {
    "@faker-js/faker": "^9.7.0",
    "@praha/drizzle-factory": "^1.2.0",
    "@repo/eslint-config": "*",
    "@trivago/prettier-plugin-sort-imports": "^5.2.2",
    "@types/node": "^20.5.7",
    "@vitest/coverage-v8": "^3.2.4",
    "drizzle-kit": "^0.27.1",
    "eslint": "^9.22.0",
    "prettier": "^3.5.3",
    "tsx": "^4.19.3",
    "typescript": "^5.8.3",
    "vitest": "^3.0.8"
  },
  "dependencies": {
    "@repo/base-repo": "file:../../packages/base-repo",
    "@repo/state-machine": "file:../../packages/state-machine",
    "@sentry/node": "^9.15.0",
    "@sentry/profiling-node": "^9.15.0",
    "@types/jsonwebtoken": "^9.0.9",
    "bcrypt": "^5.1.1",
    "drizzle-orm": "^0.36.0",
    "encore.dev": "^1.50.4",
    "glob": "^10.4.5",
    "jsonwebtoken": "^9.0.2",
    "object-assign": "^4.1.1",
    "pg": "^8.13.1"
  },
  "optionalDependencies": {
    "@rollup/rollup-linux-x64-gnu": "^4.13.0"
  }
}
