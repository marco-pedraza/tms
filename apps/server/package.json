{
  "name": "ims-server",
  "private": true,
  "version": "0.0.1",
  "description": "Encore + Drizzle Typescript Example",
  "license": "MPL-2.0",
  "type": "module",
  "scripts": {
    "preinstall": "cd ../../packages/base-repo && npm run build && cd ../../packages/state-machine && npm run build",
    "dev": "encore run",
    "test": "vitest run",
    "prebuild": "npm install --install-links",
    "test:encore": "encore test",
    "lint": "eslint",
    "format": "prettier --write .",
    "format:check": "prettier . --check",
    "db:generate": "drizzle-kit generate",
    "encore:gen-client": "encore gen client --lang typescript --output ../../packages/ims-client/index.ts",
    "encore:check": "encore check",
    "seed:permissions": "encore exec -- npx tsx db/scripts/seed-permissions.ts"
  },
  "devDependencies": {
    "@repo/eslint-config": "*",
    "@types/node": "^20.5.7",
    "drizzle-kit": "^0.27.1",
    "eslint": "^9.22.0",
    "prettier": "^3.5.3",
    "tsx": "^4.19.3",
    "typescript": "^5.8.3",
    "vitest": "^3.0.8"
  },
  "dependencies": {
    "@repo/base-repo": "file:../../packages/base-repo",
    "@repo/state-machine": "file:../../packages/state-machine",
    "bcrypt": "^5.1.1",
    "drizzle-orm": "^0.36.0",
    "@types/jsonwebtoken": "^9.0.9",
    "encore.dev": "^1.46.20",
    "glob": "^10.4.5",
    "pg": "^8.13.1",
    "object-assign": "^4.1.1",
    "jsonwebtoken": "^9.0.2"
  },
  "optionalDependencies": {
    "@rollup/rollup-linux-x64-gnu": "^4.13.0"
  }
}
