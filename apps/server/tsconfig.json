{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    /* Basic Options */
    "lib": ["ES2022"],
    "target": "ES2022",
    "module": "ES2022",
    "types": ["node"],
    "paths": {
      "~encore/*": ["./encore.gen/*"],
      "@/db": ["./db"],
      "@/db/*": ["./db/*"],
      "@/inventory": ["./inventory"],
      "@/inventory/*": ["./inventory/*"],
      "@/planning": ["./planning"],
      "@/planning/*": ["./planning/*"],
      "@/shared": ["./shared"],
      "@/shared/*": ["./shared/*"],
      "@/users": ["./users"],
      "@/users/*": ["./users/*"],
      "@/factories": ["./tests/factories"],
      "@/factories/*": ["./tests/factories/*"],
      "@/tests": ["./tests"],
      "@/tests/*": ["./tests/*"]
    },

    /* Workspace Settings */
    "composite": true,

    /* Strict Type-Checking Options */
    "strict": true,

    /* Module Resolution Options */
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,
    "isolatedModules": true,
    "sourceMap": true,

    "declaration": true,

    /* Advanced Options */
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  }
}
