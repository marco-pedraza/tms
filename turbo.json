{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": [".env"],
  "ui": "tui",
  "globalEnv": [
    "ENABLE_DB_LOGS",
    "TEST_DB_HOST",
    "TEST_DB_PORT",
    "TEST_DB_NAME",
    "TEST_DB_USER",
    "TEST_DB_PASSWORD",
    "NODE_ENV"
  ],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": [".next/**", "!.next/cache/**"]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "check-types": {
      "dependsOn": ["^check-types"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "test:encore": {
      "dependsOn": ["^test:encore"]
    },
    "format:check": {
      "dependsOn": ["^format:check"]
    },
    "encore:gen-client": {
      "dependsOn": ["^encore:gen-client"]
    },
    "encore:check": {
      "dependsOn": ["^encore:check"]
    },
    "storybook": {
      "cache": false,
      "persistent": true
    },
    "shadcn": {
      "cache": false
    }
  }
}
